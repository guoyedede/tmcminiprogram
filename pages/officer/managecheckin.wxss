/* pages/officer/managecheckin.wxss */
@import "../common/common.wxss";

.managecheckin-view {
  width: 100%;
  height: auto;
  background: #f3f7f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
}

.managecheckin-view text {
  width: 100%;
  height: 18px;
  text-align: center;
  margin-bottom: 10px;
}

.function-view {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

.function-view-button {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: #d3f8e5;
  margin-left: 10px;
  margin-right: 10px;
}

.function-view-button button {
  width: 120px;
  height: 120px;
  border-radius: 50%;
}

.function-view-list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}

.function-view-listitem {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 60px;
  align-items: center;
  border-top-width: 0px;
  border-bottom-width: 1px;
  border-left-width: 0px;
  border-right-width: 0px;
  border-color: #adafae;
  border-style: solid;
}

.function-view-listitem image {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.function-view-listitem text {
  width: auto;
  height: 18px;
  margin-left: 10px;
}