/**index.wxss**/
@import "../common/common.wxss";

.advisement {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.advisement-image {
  width: 100%;
  height: 86px;
}

.advisement-text {
  color: #aaa;
  width: auto;
  height: 18px;
}

.menu {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;
  justify-content: center;
  margin-top: 20px;
}

.menu-box {
  width: 120px;
  height: 120px;
  margin: 10px;
  background: #f9f9f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-box image {
  width: 32px;
  height: 32px;
  margin-top: 35px;
}

.menu-box text {
  width: auto;
  height: 18px;
  padding-top: 2px;
  text-align: center;
  font-style: bold;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}