/* pages/user/checkin.wxss */
@import "../common/common.wxss";

.checkin-view {
  width: 100%;
  height: auto;
  background: #f3f7f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.checkin-view text {
  width: 100%;
  height: 18px;
  text-align: center;
  margin-bottom: 10px;
}

.checkin-view-button {
  width: 180px;
  height: 180px;
  border-radius: 50%;
  background: #d9f8e8;
  margin-top: 15px;
}

.checkin-view-button button {
  width: 180px;
  height: 180px;
  border-radius: 50%;
  text-align: center;
}
