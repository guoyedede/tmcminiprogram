page {
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
}

.pagecontainer {
  width: 100%;
  height: 100%;
  background: #f3f7f5;
}

.userInfo {
  width: 100%;
  height: 180px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfo image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-top: 38px;
}

.userInfo text {
  width: auto;
  height: 18px;
  text-align: center;
}

.separateline {
  width: 100%;
  height: 1px;
  background: #aaf1cc;
}

